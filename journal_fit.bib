	year = {1997},
	keywords = {PSYCHOLOGY, information overload, 0399:Library science, 0723:Information Systems, Communication and the arts, 0633:Cognitive therapy, Consumer science, Library studies, Psychiatry, Psychology/psychiatry}
}

