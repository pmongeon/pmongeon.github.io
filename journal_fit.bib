	author = {Westfall, Joseph},
	year = {2005},
	keywords = {Authorship, 0422:Philosophy, Dramatic criticism, Kierkegaard, Soren, Literary criticism, Philosophy, Philosophy, religion and theology, Soren Kierkegaard}
}

