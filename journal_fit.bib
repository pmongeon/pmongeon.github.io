@article{robischon_political_1995,
	title = {{THE} {POLITICAL} {LOGIC} {OF} {THE} {GERMAN} {UNIFICATION} {AND} {THE} {INSTITUTIONAL} {TRANSFER} - {RESEARCH}-{BASED} {ON} {EMPIRICAL}-{EVIDENCE} {IN} {THE} {SECTORS} {OF} {HEALTH}, {SCIENCE} {AND} {TELECOMMUNICATION}},
