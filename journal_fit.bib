	volume = {44},
	issn = {0024-2667},
	doi = {10.1515/libr.1994.44.1.63},
	abstract = {The tendency to talk about Europe as a single unit needs to be modified in the light of different levels of development in both eastern and western parts of the continent. Information is an international commodity which knows no barriers and one essential method of communicating it is published materials of all kinds. No country can hope to be self-sufficient in provision of materials and cooperation is essential to meet the needs of users. This is one of the foundations of the concept of Universal Availability of Publications (UAP) promoted by IFLA. Although research shows that the majority of document supply requests are for Western European language journals in science and technology, other materials are also important. Because of the language factor, most Eastern European countries will always be net borrowers in international terms as most of their languages are not read extensively outside their own borders. Libraries in former socialist countries relied on major collections in the former Soviet Union and each other for supply but this is no longer possible for economic and political reasons. Most supplying libraries in the region now require payment in hard currency and the former GDR, which was also a major source of document supply, now takes a unified approach reflecting the practices of the former Federal Republic. Alternative sources of supply are expensive and require appropriate currency which is not available. Networking is essential for locating and supplying materials but can frustrate the user when bibliographic expectations cannot be transformed into document supply realisations. There are many rich and valuable collections in the region which are still largely unknown. Printed guides may exist but increasingly there is a need for in-depth analysis of collections and the information to be made available through electronic networks. Research in Poland has highlighted this problem. Research is cited to show that retrospective conversion of catalogues generates additional demand through interlibrary loan networks. As libraries in Eastern Europe are linked to wide networks and their catalogues automated there will be an increase in demand on them for document supply which may generate some additional revenue to buy into expensive systems to meet their own needs. The voucher scheme, being developed by IFLA, may provide some relief from these problems. Financial arrangements need to be reorganised to allow suppliers to benefit from the revenue they may generate. As electronic document delivery grows in importance there will be greater demand for this which will be limited not so much by technology as by copyright law. Governments need to take a lead in reshaping attitudes to intellectual property, telecommunications and the provision of information on a national basis. In the end the value of networking must be tested against the criteria established to justify its use. Unless purpose is properly defined disappointment will follow: proper planning will generate success.},
	number = {1},
	journal = {Libri},
	author = {CORNISH, GP},
	month = mar,
	year = {1994},
	note = {WOS:A1994NL56400005},
	pages = {63--76}
}

@article{mayntz_sectoral_1995,
	title = {Sectoral differences in the transformation of the {GDR}'s sciences system},
