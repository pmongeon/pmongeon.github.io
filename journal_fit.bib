	author = {Lai, Cheng-Yu and Yang, Heng-Li},
	month = oct,
	year = {2015},
	note = {WOS:000361127400004},
	pages = {1454--1472}
}

@book{madlberger_drivers_2016,
	address = {Norristown},
	title = {Drivers of {Active} and {Passive} {Information} {Sharing} {Behavior} on the {Internet}: {The} {Role} of {Internet} {Usage} {Patterns} and {User} {Demographics}},
