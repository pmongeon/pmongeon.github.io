	journal = {Fundamental and Applied Limnology},
	author = {Wang, Chao and Liu, Yang and Zhan, Qin and Yang, Wanling and Wu, Naicheng},
	month = dec,
	year = {2017},
	note = {WOS:000419313600003},
	pages = {25--36}
}

@article{costa_bibliometric_2018,
	title = {Bibliometric analysis of ocean literacy: {An} underrated term in the scientific literature},
	volume = {87},
